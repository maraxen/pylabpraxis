/* To learn more about Typescript configuration file: https://www.typescriptlang.org/docs/handbook/tsconfig-json.html. */
/* To learn more about Angular compiler options: https://angular.dev/reference/configs/angular-compiler-options. */
{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./src", // Set the base URL for module resolution to your 'src' folder
    "outDir": "./dist/out-tsc",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": false,
    "experimentalDecorators": true,
    "moduleResolution": "node", // Or "bundler" for newer setups
    "importHelpers": true,
    "useDefineForClassFields": false,
    "paths": {
      // Environment files
      "@env": [
        "environments/environment"
      ], // For development (environment.ts)
      "@env/*": [
        "environments/*"
      ], // For specific environment files like environment.prod
      // Core application modules/services
      "@app/*": [
        "app/*"
      ],
      "@core/*": [
        "app/core/*"
      ],
      "@auth/*": [
        "app/core/auth/*"
      ],
      "@layout/*": [
        "app/core/layout/*"
      ],
      // Features
      "@features/*": [
        "app/features/*"
      ],
      "@protocols/*": [
        "app/features/manage-protocols/*"
      ],
      "@protocolsServices/*": [
        "app/features/manage-protocols/services/*"
      ],
      "@assetsFeature/*": [
        "app/features/manage-assets/*"
      ], // Example
      "@settingsFeature/*": [
        "app/features/settings-overview/*"
      ], // Example
      // Shared components/modules/utils if you have them
      "@shared/*": [
        "app/shared/*"
      ]
    }
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  }
}