+import { vi, describe, it, expect, beforeEach } from 'vitest';
+import { render, screen, fireEvent } from '@testing-library/angular';
+import { DirectControlComponent } from './direct-control.component';
+import { AssetService } from '../services/asset.service';
+import { of, throwError } from 'rxjs';
+import { Machine, MachineStatus } from '../models/asset.models';
+import { provideHttpClient } from '@angular/common/http';
+import { provideHttpClientTesting } from '@angular/common/http/testing';
+import { MatDialogModule, MatDialogRef } from '@angular/material/dialog';
+import { ReactiveFormsModule } from '@angular/forms';
+import { NoopAnimationsModule } from '@angular/platform-browser/animations';
+
+const mockMachines: Machine[] = [
+  { accession_id: 'machine-1', name: 'Hamilton STAR', status: MachineStatus.IDLE, model: 'STAR', workcell_accession_id: 'wc-1', deck_accession_id: 'deck-1' },
+  { accession_id: 'machine-2', name: 'Opentrons Flex', status: MachineStatus.OFFLINE, model: 'Flex', workcell_accession_id: 'wc-1', deck_accession_id: 'deck-2' },
+];
+
+describe('DirectControlComponent', () => {
+  let assetServiceMock: Pick<AssetService, 'getMachines' | 'sendCommandToMachine'>;
+
+  beforeEach(() => {
+    assetServiceMock = {
+      getMachines: vi.fn(() => of(mockMachines)),
+      sendCommandToMachine: vi.fn(),
+    };
+  });
+
+  const setup = async () => {
+    return render(DirectControlComponent, {
+      imports: [ReactiveFormsModule, NoopAnimationsModule, MatDialogModule],
+      providers: [
+        provideHttpClient(),
+        provideHttpClientTesting(),
+        { provide: AssetService, useValue: assetServiceMock },
+        { provide: MatDialogRef, useValue: { close: vi.fn() } },
+      ],
+    });
+  };
+
+  it('should render the component and load machines', async () => {
+    await setup();
+    expect(screen.getByText('Direct Control')).toBeTruthy();
+    expect(assetServiceMock.getMachines).toHaveBeenCalled();
+  });
+
+  it('should send a command successfully', async () => {
+    (assetServiceMock.sendCommandToMachine as any).mockReturnValue(of({ status: 'success' }));
+    await setup();
+
+    await fireEvent.click(screen.getByLabelText('Target Instrument'));
+    await fireEvent.click(screen.getByText('Hamilton STAR'));
+
+    await fireEvent.update(screen.getByLabelText('Command (JSON)'), '{"action":"home"}');
+    await fireEvent.click(screen.getByRole('button', { name: 'Send' }));
+
+    expect(assetServiceMock.sendCommandToMachine).toHaveBeenCalledWith('machine-1', '{"action":"home"}');
+  });
+
+  it('should handle command failure', async () => {
+    (assetServiceMock.sendCommandToMachine as any).mockReturnValue(throwError(() => new Error('Test Error')));
+    await setup();
+
+    await fireEvent.click(screen.getByLabelText('Target Instrument'));
+    await fireEvent.click(screen.getByText('Hamilton STAR'));
+
+    await fireEvent.update(screen.getByLabelText('Command (JSON)'), '{"action":"home"}');
+    await fireEvent.click(screen.getByRole('button', { name: 'Send' }));
+
+    expect(assetServiceMock.sendCommandToMachine).toHaveBeenCalled();
+  });
+});
