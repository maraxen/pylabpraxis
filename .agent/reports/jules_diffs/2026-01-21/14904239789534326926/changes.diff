+import { Component, inject, OnInit } from '@angular/core';
+import { CommonModule } from '@angular/common';
+import { ReactiveFormsModule, FormBuilder, Validators } from '@angular/forms';
+import { MatDialogModule, MatDialogRef } from '@angular/material/dialog';
+import { MatFormFieldModule } from '@angular/material/form-field';
+import { MatInputModule } from '@angular/material/input';
+import { MatSelectModule } from '@angular/material/select';
+import { MatButtonModule } from '@angular/material/button';
+import { MatProgressSpinnerModule } from '@angular/material/progress-spinner';
+import { Observable, of } from 'rxjs';
+import { catchError, finalize } from 'rxjs/operators';
+import { Machine } from '../models/asset.models';
+import { AssetService } from '../services/asset.service';
+
+@Component({
+  selector: 'app-direct-control',
+  standalone: true,
+  imports: [
+    CommonModule,
+    ReactiveFormsModule,
+    MatDialogModule,
+    MatFormFieldModule,
+    MatInputModule,
+    MatSelectModule,
+    MatButtonModule,
+    MatProgressSpinnerModule,
+  ],
+  template: `
+    <h2 mat-dialog-title>Direct Control</h2>
+    <mat-dialog-content class="flex flex-col gap-4 py-4">
+      <div *ngIf="isLoading" class="absolute inset-0 bg-black bg-opacity-50 flex items-center justify-center z-10">
+        <mat-spinner></mat-spinner>
+      </div>
+      <form [formGroup]="form" class="flex flex-col gap-4">
+        <mat-form-field appearance="outline">
+          <mat-label>Target Instrument</mat-label>
+          <mat-select formControlName="machineId">
+            <mat-option *ngFor="let machine of (machines$ | async)" [value]="machine.accession_id">
+              {{ machine.name }}
+            </mat-option>
+          </mat-select>
+        </mat-form-field>
+
+        <mat-form-field appearance="outline">
+          <mat-label>Command (JSON)</mat-label>
+          <textarea matInput formControlName="command" cdkTextareaAutosize cdkAutosizeMinRows="3"
+                    placeholder='{"command": "home", "axes": ["x", "y"]}'></textarea>
+        </mat-form-field>
+      </form>
+
+      <div class="flex-grow flex flex-col">
+        <h3 class="font-bold mb-2">Response</h3>
+        <div class="response-panel flex-grow p-4 bg-gray-900 text-green-400 font-mono rounded-md overflow-auto">
+          <pre *ngIf="response">{{ response | json }}</pre>
+          <span *ngIf="!response" class="text-gray-500">Awaiting command...</span>
+        </div>
+      </div>
+
+    </mat-dialog-content>
+    <mat-dialog-actions align="end">
+      <button mat-button mat-dialog-close>Close</button>
+      <button mat-flat-button color="primary" [disabled]="form.invalid || isLoading" (click)="sendCommand()">Send</button>
+    </mat-dialog-actions>
+  `
+})
+export class DirectControlComponent implements OnInit {
+  private fb = inject(FormBuilder);
+  private assetService = inject(AssetService);
+  private dialogRef = inject(MatDialogRef<DirectControlComponent>);
+
+  form = this.fb.group({
+    machineId: ['', Validators.required],
+    command: ['', Validators.required],
+  });
+
+  machines$!: Observable<Machine[]>;
+  response: any = null;
+  isLoading = false;
+
+  ngOnInit() {
+    this.machines$ = this.assetService.getMachines();
+  }
+
+  sendCommand() {
+    if (!this.form.valid) {
+      return;
+    }
+    this.isLoading = true;
+    const { machineId, command } = this.form.value;
+
+    // This will be properly implemented in the next step.
+    this.response = { status: 'success', message: 'Command received', details: this.form.value };
+    this.isLoading = false;
+  }
+}
