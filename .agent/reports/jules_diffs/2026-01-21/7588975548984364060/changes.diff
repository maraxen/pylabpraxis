+"""Tests for the hardware API endpoints."""
+
+import pytest
+from httpx import AsyncClient
+from sqlalchemy.ext.asyncio import AsyncSession
+
+from tests.factories import MachineDefinitionFactory
+
+
+@pytest.fixture
+def machine_definition(db_session: AsyncSession) -> dict:
+    """Create a machine type definition."""
+    return MachineDefinitionFactory.create_sync(
+        name="test_machine_definition",
+    )
+
+
+@pytest.mark.asyncio
+async def test_register_machine(
+    client: AsyncClient,
+    machine_definition: dict,
+):
+    """Test registering a new machine."""
+    response = await client.post(
+        "/hardware/register",
+        json={
+            "name": "Test Machine",
+            "serial_number": "12345",
+            "machine_type_definition_name": machine_definition.name,
+            "connection_info": {"backend": "simulator"},
+        },
+    )
+    assert response.status_code == 200
+    data = response.json()
+    assert data["name"] == "Test Machine"
+    assert data["serial_number"] == "12345"
+
+    # Test registering a duplicate machine
+    response = await client.post(
+        "/hardware/register",
+        json={
+            "name": "Test Machine 2",
+            "serial_number": "12345",
+            "machine_type_definition_name": machine_definition.name,
+            "connection_info": {"backend": "simulator"},
+        },
+    )
+    assert response.status_code == 409
